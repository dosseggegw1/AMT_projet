<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Shop eLS | AMT Project</display-name>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.IndexController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.RegisterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.LogoutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.CartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.CheckoutController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.ContactController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.ProductDetailController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductDetail</servlet-name>
        <url-pattern>/productDetail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Administrator</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Administrator</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.AdministratorController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Categories</servlet-name>
        <url-pattern>/admin/categories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Categories</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.CategoryController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Articles</servlet-name>
        <url-pattern>/admin/articles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Articles</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.ArticleController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ArticleAdd</servlet-name>
        <url-pattern>/admin/articleAdd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleAdd</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.ArticleAddController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ArticleModify</servlet-name>
        <url-pattern>/admin/articleModify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleModify</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.ArticleModifyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ArticleImageDelete</servlet-name>
        <url-pattern>/admin/articleImageDelete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ArticleImageDelete</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.ArticleImageDeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryAdd</servlet-name>
        <url-pattern>/admin/categoryAdd</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryAdd</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.CategoryAddController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryDelete</servlet-name>
        <url-pattern>/admin/categoryDelete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryDelete</servlet-name>
        <servlet-class>ch.heigvd.amt.projet.shop_els.controller.admin.CategoryDeleteController</servlet-class>
    </servlet>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/errorPages/404.jsp</location>
    </error-page>


</web-app>